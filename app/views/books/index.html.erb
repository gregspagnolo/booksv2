<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Amazon</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <form>
    <legend>Search</legend>
    <input type="text" value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword'>
  </form>

  <tbody>
    <% @books.each do |book| %>
      <tr class='<%= "finished" if book.finished? %>'>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.amazon_id %></td>
        <td><%= book.rating %></td>
        <% book.genres.each do |genre| %>
        <td><%= book.genres.name %></td>
        <% end %>
        <td><%= image_from_amazon(book.amazon_id) %>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

